# Server Configuration
PORT=3000
NODE_ENV=development

# Auto-update Configuration
# Вмикає/вимикає автоматичне оновлення (true/false)
AUTO_UPDATE=true
# Інтервал оновлення (cron формат)
# */30 * * * * - кожні 30 хвилин
# 0 * * * * - кожну годину
# 0 */2 * * * - кожні 2 години
UPDATE_INTERVAL=*/30 * * * *

# Telegram Channel
TELEGRAM_CHANNEL_URL=https://t.me/s/Zaporizhzhyaoblenergo_news

# Zoe Scraper Configuration
ENABLE_ZOE_SCRAPER=true

# SSL Verification для zoe.com.ua
# За замовчуванням використовується custom SSL validation:
#  ✓ Перевіряється hostname (тільки zoe.com.ua)
#  ✓ Перевіряється домен в сертифікаті
#  ✓ Перевіряється термін дії сертифіката
#  ✓ Перевіряється issuer (CA)
#  ✗ Ігнорується incomplete certificate chain (проблема на сервері zoe.com.ua)
#
# Встановіть в 'true' лише якщо потрібно повністю відключити всю SSL верифікацію
# (не рекомендується навіть для development)
ZOE_SKIP_SSL_VERIFY=false

# Logging
# Вмикає детальне логування для розробки (true/false)
DEBUG=false
