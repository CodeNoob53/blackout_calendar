{
  "name": "powerapp-backend",
  "version": "2.0.0",
  "description": "Backend service for power outage schedule parser (Telegram-source) and public schedule API for Zaporizhzhya region.",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "build": "node scripts/init-db.js",
    "sync:bootstrap": "node src/cli/syncCli.js bootstrap",
    "sync:orchestrator": "node src/cli/syncCli.js orchestrator",
    "sync:date": "node src/cli/syncCli.js sync-date",
    "sync:help": "node src/cli/syncCli.js help",
    "generate:vapid": "node scripts/generate-vapid-keys.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "Energy",
    "Ukraine",
    "PowerGrid",
    "Outage",
    "Parser",
    "Express",
    "API"
  ],
  "author": "Oleksandr Fedotov",
  "license": "MIT",
  "engines": {
    "node": ">=25.2.1"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "better-sqlite3": "^12.5.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "swagger-jsdoc": "7.0.0-rc.6",
    "swagger-ui-express": "^5.0.0",
    "telegraf": "^4.16.3",
    "web-push": "^3.6.7",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "nodemon": "^3.1.2",
    "openapi-types": "^12.1.3",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
